<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Soft Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="mainpopup" template="/tiles/layout_popup.jsp">
		<put-attribute name="title" value="Spring Project"/>
		<put-attribute name="body" value = "/tiles/body.jsp"/>
	</definition>


	<definition name="main2" template="/tiles/layout.jsp">
		<put-attribute name="title" value="Spring Project"/>
		<put-attribute name="top" value = "/tiles/top.jsp"/>
		<put-attribute name="body" value = "/tiles/body.jsp"/>
	</definition>


	<definition name="main3" template="/tiles/layout_side.jsp">
		<put-attribute name="title" value="Spring Project"/>
		<put-attribute name="top" value = "/tiles/top.jsp"/>
		<put-attribute name="body_left" value = "/tiles/body_left.jsp"/>
		<put-attribute name="body_right" value = "/tiles/body_right.jsp"/>
	</definition>

	
	<definition name="tilesbody_*_*" extends="main3">
		<put-attribute name="body_right" value = "/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="tilestop_*_*" extends="main2">
		<put-attribute name="body" value = "/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="tilespopup_*_*" extends="mainpopup">
		<put-attribute name="body" value = "/{1}/{2}.jsp"/>
	</definition>
	
	

	

</tiles-definitions>
